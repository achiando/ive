// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  STUDENT
  LECTURER
  TECHNICIAN
  ADMIN_TECHNICIAN
  LAB_MANAGER
  ADMIN
  OTHER
  FACULTY
}
enum ConsumableCategory {
  CONSUMABLE
  SPARE
}
enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum EquipmentStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
  OUT_OF_SERVICE
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  COMPLETED
  IN_PROGRESS
  CHECKED_OUT
  RETURNED
  OVERDUE
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  PENDING
}

enum MaintenanceType {
  PREVENTIVE
  CORRECTIVE
  EMERGENCY
  ROUTINE
  CALIBRATION
}
enum MaintenanceOrderState {
  NONE
  PENDING_ORDER
  ORDERED
  RECEIVED
}
enum ConsumableStatus {
  AVAILABLE
  LOW_STOCK
  OUT_OF_STOCK
}

enum ProjectStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  ARCHIVED
}

// Add this enum
enum SafetyTestFrequency {
  ONE_TIME
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  BI_ANNUAL
  ANNUAL
}

// Add this enum
enum ManualType {
  PDF
  VIDEO
  LINK // For general web links that are neither PDF nor video
  OTHER
  IMAGE
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String             @id @default(cuid())
  firstName          String
  lastName           String
  email              String             @unique
  emailVerified      DateTime?
  password           String
  phoneNumber          String?
  lastLogin            DateTime?          @default(now())
  resetToken           String?
  verificationToken    String?
  department           String?
  position             String?
  profileImage         String?
  resetExpiry          DateTime?
  status               RegistrationStatus @default(PENDING)
  verificationExpiry   DateTime?
  employeeId           String?            @unique
  studentId            String?            @unique
  yearOfStudy          Int?
  instructorId         String?
  associatedInstructor String?
  affiliatedInstitution String?
  program              String?
  facultyId            String?
  role               UserRole           @default(STUDENT)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  accounts           Account[]
  sessions           Session[]
  equipmentBookings  EquipmentBooking[]
  projects           Project[]          @relation("ProjectCreator")
  projectMemberships ProjectMember[]
  invitedProjectMembers ProjectMember[]  @relation("ProjectInvitations")
  consumableAllocations ConsumableAllocation[] 
  safetyTestAttempts SafetyTestAttempt[] // Add this relation
  assignedMaintenances Maintenance[]        @relation("AssignedMaintenances")
  createdMaintenances  Maintenance[]        @relation("CreatedMaintenances")
  events               Event[]              @relation("UserEvents")
  equipment            Equipment[]          @relation("UserEquipment")
  createdEvents        Event[]              @relation("EventCreator")
  eventParticipations  EventParticipation[] @relation("UserEventParticipations")
  faculty              Faculty?             @relation("FacultyLecturers", fields: [facultyId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id              String   @id @default(cuid())
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime
  location        String? // General location (deprecated, use venue instead)
  venue           String? // Specific venue name or identifier
  maxParticipants Int?
  createdById     String
  createdBy       User     @relation("EventCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  participants EventParticipation[] @relation("EventParticipations")
  users        User[]               @relation("UserEvents")

  // Media (kept for backward compatibility)
  imageUrl String? @db.Text
}

model EventParticipation {
  id          String   @id @default(cuid())
  // For registered users
  user        User?    @relation("UserEventParticipations", fields: [userId], references: [id], onDelete: Cascade)
  userId      String?
  // For non-registered users
  guestName   String?
  guestEmail  String?  @db.VarChar(255)
  
  event       Event    @relation("EventParticipations", fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String
  joinedAt    DateTime @default(now())

  // Allow multiple registrations per user/email as long as they're for different events
  @@unique([id])
  @@unique([userId, eventId], name: "unique_user_event")
  @@unique([guestEmail, eventId], name: "unique_guest_event")
  @@index([guestEmail])
  @@index([userId])
}

model Faculty {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  equipments Equipment[]
  lecturers User[]   @relation("FacultyLecturers")
}

model Equipment {
  id            String           @id @default(cuid())
  name          String
  model         String?
  serialNumber  String?          @unique
  description   String?          @db.Text
  location      String?
  status        EquipmentStatus  @default(AVAILABLE)
  image      String?
  category           String
  manufacturer       String?
  manualUrl     String?
  purchaseDate  DateTime?
  purchasePrice Decimal?         @db.Decimal(10, 2)
  specifications Json?
  warrantyExpiry     DateTime?
  estimatedPrice     Float?
  actualPrice        Float?
  notes              String?
  requiresSafetyTest Boolean   @default(false)
  dailyCapacity      Int?      @default(5)
  facultyId     String?
  faculty       Faculty?         @relation(fields: [facultyId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt


  maintenances  Maintenance[]
  bookings      EquipmentBooking[]
  consumables   Consumable[]     @relation("EquipmentConsumables")
  safetyTestAttempts SafetyTestAttempt[] // Add this relation
  users        User[]        @relation("UserEquipment")
  generatedQuizzes GeneratedQuiz[]
}

model Maintenance {
  id          String                @id @default(cuid())
  title       String
  description String?
  status      MaintenanceStatus     @default(SCHEDULED)
  type        MaintenanceType       @default(PREVENTIVE)
  startDate   DateTime
  endDate     DateTime?
  notes       String?
  priority    String?
  orderStatus MaintenanceOrderState @default(NONE) // New field
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId String

  createdBy   User   @relation("CreatedMaintenances", fields: [createdById], references: [id])
  createdById String

  assignedTo   User?   @relation("AssignedMaintenances", fields: [assignedToId], references: [id])
  assignedToId String?

  consumableAllocations ConsumableAllocation[]

  @@index([equipmentId])
  @@index([createdById])
  @@index([assignedToId])
}

model Consumable {
  id            String         @id @default(cuid())
  name          String
  description   String?        @db.Text
  quantity      Int
  unit          String?
  category        ConsumableCategory // Use the new enum
  currentStock    Float
  minimumStock    Float              @default(0)
  unitCost        Float? // Cost per unit for tracking
  location        String?
  supplier        String?
  lastRestockDate DateTime?
  expiryDate      DateTime?
  image           String?
  notes           String?
  status        ConsumableStatus @default(AVAILABLE)

  createdAt     DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  allocations   ConsumableAllocation[]
 equipment   Equipment[]  @relation("EquipmentConsumables")
}

model ConsumableAllocation {
  id            String      @id @default(cuid())
  consumableId  String
  consumable    Consumable  @relation(fields: [consumableId], references: [id])
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  quantity      Int
  allocatedDate DateTime    @default(now())
  maintenanceId String?
  maintenance   Maintenance? @relation(fields: [maintenanceId], references: [id])
  booking        EquipmentBooking? @relation(fields: [bookingId], references: [id])
  bookingId      String?
  notes         String?     @db.Text
  purpose       String?
  allocatedBy String?     // User ID of who allocated it
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  
}

model Project {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ProjectStatus   @default(PENDING)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  creatorId   String
  creator     User            @relation("ProjectCreator", fields: [creatorId], references: [id])
  members     ProjectMember[]
  bookings    EquipmentBooking[]
  documents   ProjectDocument[]
}

model ProjectMember {
  id          String   @id @default(cuid())
  projectId   String
  status      String    @default("PENDING") // PENDING, ACCEPTED, REVOKED, EXPIRED
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt    DateTime  @default(now())
  token       String?   @unique
  expiresAt   DateTime?
  invitedById String?
  invitedBy   User?     @relation("ProjectInvitations", fields: [invitedById], references: [id])

  @@unique([projectId, userId])
}

model ProjectDocument {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fileName  String
  fileUrl   String
  fileType  String?
  uploadedAt DateTime @default(now())
  uploadedBy String // User ID of who uploaded it
}

model EquipmentBooking {
  id          String      @id @default(cuid())
  equipmentId String
  equipment   Equipment   @relation(fields: [equipmentId], references: [id])
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id])
  startDate   DateTime
  endDate     DateTime
  status      BookingStatus @default(PENDING)
  purpose     String?     @db.Text
  notes       String?     @db.Text
  approvedBy  String? // User ID of who approved it
  approvedAt  DateTime?
  checkedOut  Boolean     @default(false)
  checkedIn   Boolean     @default(false)
  checkedInAt DateTime?
  isReminderSent Boolean  @default(false)
  bookingHours Int?
  bookingTime String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  consumableAllocations ConsumableAllocation[]
}

// Add this model
model SafetyTest {
  id                      String              @id @default(cuid())
  name                    String              @unique
  description             String?             @db.Text
  manualUrl               String?             // URL for a manual or video related to this safety test
  manualType              ManualType?         // Type of manual (PDF, VIDEO, LINK, OTHER)
  requiredForRoles        UserRole[]          // Array of roles for which this test is mandatory
  associatedEquipmentType String?             // e.g., "Microscope", "Centrifuge"
  frequency               SafetyTestFrequency @default(ONE_TIME)
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  attempts                SafetyTestAttempt[]
  generatedQuizzes GeneratedQuiz[]
}

// Add this model
model SafetyTestAttempt {
  id           String     @id @default(cuid())
  safetyTestId String?
  safetyTest   SafetyTest? @relation(fields: [safetyTestId], references: [id])
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  equipmentId  String?
  equipment    Equipment?  @relation(fields: [equipmentId], references: [id])
  completedAt  DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([safetyTestId, userId, equipmentId, completedAt]) // A user can complete the same test for the same equipment multiple times
}

// New model for storing generated quiz questions
model GeneratedQuiz {
  id           String     @id @default(cuid())
  safetyTestId String?
  safetyTest   SafetyTest? @relation(fields: [safetyTestId], references: [id])
  equipmentId  String?
  equipment    Equipment?  @relation(fields: [equipmentId], references: [id])
  questions    Json       // Store the array of QuizQA objects as JSON
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([safetyTestId, equipmentId]) // A unique quiz for a given safetyTestId and equipmentId combination
}