// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  STUDENT
  LECTURER
  TECHNICIAN
  ADMIN_TECHNICIAN
  LAB_MANAGER
  ADMIN
  OTHER
  FACULTY
}
enum ConsumableCategory {
  CONSUMABLE
  SPARE
}
enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum EquipmentStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
  OUT_OF_SERVICE
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  COMPLETED
  IN_PROGRESS
  CHECKED_OUT
  RETURNED
  OVERDUE
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ConsumableStatus {
  AVAILABLE
  LOW_STOCK
  OUT_OF_STOCK
}

enum ProjectStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  ARCHIVED
}

// Add this enum
enum SafetyTestFrequency {
  ONE_TIME
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  BI_ANNUAL
  ANNUAL
}

// Add this enum
enum ManualType {
  PDF
  VIDEO
  LINK // For general web links that are neither PDF nor video
  OTHER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String             @id @default(cuid())
  firstName          String
  lastName           String
  email              String             @unique
  emailVerified      DateTime?
  password           String
  phoneNumber          String?
  lastLogin            DateTime?          @default(now())
  resetToken           String?
  verificationToken    String?
  department           String?
  position             String?
  profileImage         String?
  resetExpiry          DateTime?
  status               RegistrationStatus @default(PENDING)
  verificationExpiry   DateTime?
  employeeId           String?            @unique
  studentId            String?            @unique
  yearOfStudy          Int?
  instructorId         String?
  associatedInstructor String?
  affiliatedInstitution String?
  program              String?
  facultyId            String?
  role               UserRole           @default(STUDENT)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  accounts           Account[]
  sessions           Session[]
  equipmentBookings  EquipmentBooking[]
  projects           Project[]          @relation("ProjectCreator")
  projectMemberships ProjectMember[]
  consumableAllocations ConsumableAllocation[]
  safetyTestAttempts SafetyTestAttempt[] // Add this relation
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Faculty {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  equipments Equipment[]
}

model Equipment {
  id            String           @id @default(cuid())
  name          String
  model         String?
  serialNumber  String?          @unique
  description   String?          @db.Text
  location      String?
  status        EquipmentStatus  @default(AVAILABLE)
  imageUrl      String?
  manualUrl     String?
  purchaseDate  DateTime?
  purchasePrice Decimal?         @db.Decimal(10, 2)
  specifications Json?
  facultyId     String?
  faculty       Faculty?         @relation(fields: [facultyId], references: [id])
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  maintenances  Maintenance[]
  bookings      EquipmentBooking[]
  consumables   Consumable[]     @relation("EquipmentConsumables")
  safetyTestAttempts SafetyTestAttempt[] // Add this relation
}

model Maintenance {
  id            String            @id @default(cuid())
  equipmentId   String
  equipment     Equipment         @relation(fields: [equipmentId], references: [id])
  scheduledDate DateTime
  completionDate DateTime?
  description   String?           @db.Text
  status        MaintenanceStatus @default(SCHEDULED)
  cost          Decimal?          @db.Decimal(10, 2)
  performedBy   String? // User ID of technician
  notes         String?           @db.Text
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  consumableAllocations ConsumableAllocation[]
}

model Consumable {
  id            String         @id @default(cuid())
  name          String
  description   String?        @db.Text
  quantity      Int
  unit          String?
  category        ConsumableCategory // Use the new enum
  currentStock    Float
  minimumStock    Float              @default(0)
  unitCost        Float? // Cost per unit for tracking
  location        String?
  supplier        String?
  lastRestockDate DateTime?
  expiryDate      DateTime?
  image           String?
  notes           String?
  status        ConsumableStatus @default(AVAILABLE)

  createdAt     DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  allocations   ConsumableAllocation[]
 equipment   Equipment[]  @relation("EquipmentConsumables")
}

model ConsumableAllocation {
  id            String      @id @default(cuid())
  consumableId  String
  consumable    Consumable  @relation(fields: [consumableId], references: [id])
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  quantity      Int
  allocatedDate DateTime    @default(now())
  maintenanceId String?
  maintenance   Maintenance? @relation(fields: [maintenanceId], references: [id])
  notes         String?     @db.Text
  allocatedBy   String? // User ID of who allocated it (e.g., technician)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Project {
  id          String          @id @default(cuid())
  title       String
  description String?         @db.Text
  status      ProjectStatus   @default(PENDING)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  creatorId   String
  creator     User            @relation("ProjectCreator", fields: [creatorId], references: [id])
  members     ProjectMember[]
  bookings    EquipmentBooking[]
  documents   ProjectDocument[]
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt  DateTime @default(now())

  @@unique([projectId, userId])
}

model ProjectDocument {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fileName  String
  fileUrl   String
  fileType  String?
  uploadedAt DateTime @default(now())
  uploadedBy String // User ID of who uploaded it
}

model EquipmentBooking {
  id          String      @id @default(cuid())
  equipmentId String
  equipment   Equipment   @relation(fields: [equipmentId], references: [id])
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id])
  startDate   DateTime
  endDate     DateTime
  status      BookingStatus @default(PENDING)
  purpose     String?     @db.Text
  notes       String?     @db.Text
  approvedBy  String? // User ID of who approved it
  approvedAt  DateTime?
  checkedOut  Boolean     @default(false)
  checkedIn   Boolean     @default(false)
  checkedInAt DateTime?
  isReminderSent Boolean  @default(false)
  bookingHours Int?
  bookingTime String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Add this model
model SafetyTest {
  id                      String              @id @default(cuid())
  name                    String              @unique
  description             String?             @db.Text
  manualUrl               String?             // URL for a manual or video related to this safety test
  manualType              ManualType?         // Type of manual (PDF, VIDEO, LINK, OTHER)
  requiredForRoles        UserRole[]          // Array of roles for which this test is mandatory
  associatedEquipmentType String?             // e.g., "Microscope", "Centrifuge"
  frequency               SafetyTestFrequency @default(ONE_TIME)
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  attempts                SafetyTestAttempt[]
}

// Add this model
model SafetyTestAttempt {
  id           String     @id @default(cuid())
  safetyTestId String
  safetyTest   SafetyTest @relation(fields: [safetyTestId], references: [id])
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  equipmentId  String
  equipment    Equipment  @relation(fields: [equipmentId], references: [id])
  completedAt  DateTime   @default(now())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([safetyTestId, userId, equipmentId, completedAt]) // A user can complete the same test for the same equipment multiple times
}